<%- include("./partials/header") %>

<h1 style='text-align: center; margin-bottom:25px;'>Login To Dashboard</h1>
<form action='/login' method='POST'>
    <div class='container' style='width: 30%;'>
        <div class='form-group' >
            <input class ='form-control' type="text" name='email' placeholder="Email">
        </div>
        <div class='form-group' >
            <input class ='form-control' type="text" name='password' placeholder="Enter password">
        </div>
        <div class='form-group' >
            <input class ='form-control btn btn-lg btn-default btn-primary' type='submit'>
        </div>
        <a href="/register">New user</a>
    </div>
    
</form>


<%- include("../partials/header") %>

<h1 style='text-align: center; margin-bottom:25px;'>Add Comment To <%= campground.name %></h1>

<form action='/campgrounds/<%= campground._id %>/comments' method='POST'>
    <div class='container' style='width: 30%;'>
        <div class='form-group' >
            <input class ='form-control' type="text" name='text' placeholder="Text">
        </div>
        <div class='form-group' >
            <input class ='form-control btn btn-lg btn-default btn-primary' type='submit'>
        </div>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
    
</form>

<%- include("../partials/footer") %>
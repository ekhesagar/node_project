<%- include("./partials/header") %>

<h1 style='text-align: center; margin-bottom:25px;'>Sign Up</h1>

<form action='/register' method='POST'>
    <div class='container' style='width: 30%;'>
        <div class='form-group' >
            <input class ='form-control' type="text" name='username' placeholder="Name">
        </div>
        <div class='form-group' >
            <input class ='form-control' type="email" name='email' placeholder="email">
        </div>
        <div class='form-group' >
            <input class ='form-control' type="password" name='password' placeholder="enter password">
        </div>
        <div class='form-group' >
            <input class ='form-control btn btn-lg btn-default btn-primary' type='submit'>
        </div>
        <a href="/login">User already exist</a>
    </div>
    
</form>

<%- include("./partials/footer") %>